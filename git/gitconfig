[color]
	ui = auto
[alias]
	uncommit = !git reset --soft HEAD^ && git reset
	wip = commit -a -m "wip"
	pg = "!f(){ if [ -z \"$(git status --porcelain 2>/dev/null| egrep '^(M| M)')\" ]; then PREV=$(git rev-parse --abbrev-ref HEAD); R=push_branch; git checkout master -b $R && if ! git cherry-pick $1; then echo 'fix conflicts and exit shell' && git status && $SHELL && git cherry-pick --continue; fi && (git push ; git checkout $PREV && git branch -D $R) || (git cherry-pick --abort ; git checkout $PREV && git branch -D $R); else echo 'dirty dir'; fi }; f"
[core]
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	autocrlf = false
	pager = less -FRX

[include]
	path = ~/.gitconfig.local
[http]
	cookiefile = /home/michal/.gitcookies
[push]
	default = matching
[init]
	templatedir = ~/.git_template
