set confirm off
set verbose off
set history filename ~/.gdb_history
set history save

set width 0
set height 0

source ~/.gdbinit.colors

# fallback
set prompt \001\033[01;31m\002gdb \001\033[01;34m\002$ \001\033[0m\002
# actual prompt
set extended-prompt \[\e[01;31m\]gdb \[\e[0m\](\f) \[\e[01;34m\]$ \[\e[0m\]

source ~/.gdbinit.local
